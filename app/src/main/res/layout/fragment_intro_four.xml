<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.AesthetX.aesthetx.Classes.Fragments.IntroFragments.IntroFourFragment"
    android:background="#000000">

    <EditText
        android:id="@+id/editFeetHeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:backgroundTint="#F5F5F5"
        android:imeOptions="actionNext"
        android:layout_marginStart="60sp"
        android:textAlignment="center"
        android:textColor="#33BAF8"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="40sp"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80sp"
        android:gravity="center"
        android:text="@string/slideFourText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F5F5F5"
        android:textSize="30sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editInchesHeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"

        android:backgroundTint="#F5F5F5"
        android:imeOptions="actionNext"
        android:layout_marginTop="40sp"
        android:textAlignment="center"
        android:textColor="#33BAF8"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginEnd="60sp"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@id/editFeetHeight"
        android:layout_alignStart="@+id/editFeetHeight"
        android:layout_toStartOf="@+id/SpaceView"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="@string/feet"
        android:textColor="#F5F5F5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editFeetHeight"
        app:layout_constraintStart_toStartOf="@+id/editFeetHeight"
        app:layout_constraintTop_toBottomOf="@+id/editFeetHeight" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@id/editInchesHeight"
        android:layout_alignEnd="@+id/editInchesHeight"
        android:layout_toEndOf="@+id/SpaceView"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="@string/inches"
        android:textColor="#F5F5F5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editInchesHeight"
        app:layout_constraintStart_toStartOf="@+id/editInchesHeight"
        app:layout_constraintTop_toBottomOf="@+id/editInchesHeight" />


</androidx.constraintlayout.widget.ConstraintLayout>