<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:paddingTop="40dp"
    tools:context="Aesthet.X.adfree.Intro.MainActivity">

    <EditText
        android:id="@+id/bodyweight_input"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        android:imeOptions="actionNext"
        android:textColor="#F5F5F5"
        android:textSize="30sp"
        android:backgroundTint="#F5F5F5"
        android:textAlignment="center"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/slideThreeText"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#FFFFFFFF"
        android:textSize="30sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388" />


    <TextView
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@id/bodyweight_input"
        android:layout_alignStart="@+id/bodyweight_input"
        android:layout_alignEnd="@+id/bodyweight_input"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:text="@string/pounds"
        android:textColor="#F5F5F5"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed-medium" />

    <View
        android:id="@+id/linedivide3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_above="@id/linearlayout3" />

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5.5" />


        <TextView
            android:id="@+id/indicator_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#ffffff "
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#BAF833"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/indicator_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/nextbutton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="@string/nextbutton"
            android:textColor="#ffffff " />

    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"></ScrollView>


</RelativeLayout>