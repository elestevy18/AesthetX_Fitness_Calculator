<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:paddingTop="40dp"
    tools:context="Aesthet.X.adfree.Intro.Activity6">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/slideSevenText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F5F5F5"
        android:textSize="30sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />


    <EditText
        android:id="@+id/CompositionInput"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView7"
        android:imeOptions="actionNext"
        android:textColor="#F5F5F5"
        android:textSize="40sp"
        android:backgroundTint="#F5F5F5"
        android:textAlignment="center"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/notsure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CompositionInput"
        android:text="@string/notsure"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/clickhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notsure"
        android:text="@string/clickehere"
        android:textColor="#BAF833"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true" />


    <View
        android:id="@+id/linedivide7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_above="@id/linearlayout3" />

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5.5" />


        <TextView
            android:id="@+id/indicator_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#ffffff "
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView

            android:id="@+id/indicator_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#BAF833"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indicator_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/nextbutton6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="@string/nextbutton"
            android:textColor="#F5F5F5" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"></ScrollView>


</RelativeLayout>