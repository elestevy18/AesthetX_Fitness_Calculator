<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:paddingTop="40dp"
    tools:context=".Intro.Activity5">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/slideFiveText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F5F5F5"
        android:textSize="30sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388" />


    <EditText
        android:id="@+id/ExperienceInput"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        android:inputType="numberDecimal"
        android:textColor="#F5F5F5"
        android:textSize="40sp"
        android:backgroundTint="#F5F5F5"
        android:textAlignment="center"
        android:imeOptions="actionNext"/>


    <TextView
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@id/ExperienceInput"
        android:layout_alignStart="@+id/ExperienceInput"
        android:layout_alignEnd="@+id/ExperienceInput"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="@string/months"
        android:textColor="#F5F5F5"
        android:textSize="14sp" />

    <View
        android:id="@+id/linedivide3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_above="@id/linearlayout3"
        />

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5.5" />


        <TextView
            android:id="@+id/indicator_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#ffffff "
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp"
            />

        <TextView

            android:id="@+id/indicator_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#BAF833"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/indicator_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/indicator_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/interpunct"
            android:textColor="#D3D3D3"
            android:textSize="40sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/nextbutton5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="@string/nextbutton"
            android:textColor="#F5F5F5 " />

    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    </ScrollView>

</RelativeLayout>