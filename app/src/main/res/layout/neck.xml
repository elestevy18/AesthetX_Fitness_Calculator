<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:backgroundTint="#000000">

    <RelativeLayout
        android:id="@+id/Neck_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4sp">

        <ImageView
            android:id="@+id/muscleVector"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#F5F5F5"
            android:foregroundTint="#F5F5F5"
            android:padding="2dp"
            android:tint="#F5F5F5" />

        <TextView
            android:id="@+id/muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/muscleVector"
            android:text="Muscle"
            android:textColor="#33BAF8"
            android:textSize="16sp"
             />


        <TextView
            android:id="@+id/progresstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/muscle"
            android:layout_marginStart="4sp"
            android:layout_marginBottom="2sp"
            android:layout_toEndOf="@+id/muscle"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/muscle"
            android:layout_marginBottom="2sp"
            android:layout_toEndOf="@+id/progresstxt"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/maxtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/muscle"

            android:layout_marginBottom="2sp"
            android:layout_toEndOf="@+id/slash"
            android:text="16"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:elevation="15sp"/>

        <ProgressBar
            android:id="@+id/neck_progress_bar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/muscle"
            android:layout_marginEnd="8sp"
            android:layout_marginTop="5sp"
            android:layout_toStartOf="@+id/addVolume"
            android:layout_toEndOf="@id/muscleVector"
            android:progress="50"
            android:theme="@style/ProgressBar"
            android:elevation="-5dp"/>

        <TextView
            android:id="@+id/Neck_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8sp"
            android:layout_toStartOf="@+id/addVolume"
            android:elevation="10dp"
            android:gravity="end"
            android:text="MAV/Frequency"
            android:textColor="#F5F5F5"
            android:textSize="10sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:text="Add Set"
            android:textColor="#BAF833"
            app:cornerRadius="8dp"
            app:strokeColor="#BAF833"
            app:strokeWidth="1sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>